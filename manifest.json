{
    "manifest_version": 3,
    "name": "Context Weaver - v1.0",
    "version": "1.0",
    "description": "AI-Powered Text Transformation Companion - Simply highlight text to chat in browser with GPT, DeepSeek, or Grok!",
    "permissions": ["storage"],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "options_page": "options/options.html",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}